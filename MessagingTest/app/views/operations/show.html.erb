<%- model_class = Operation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:engine) %>:</strong></dt>
  <dd><%= @operation.engine %></dd>
  <dt><strong><%= model_class.human_attribute_name(:action) %>:</strong></dt>
  <dd><%= @operation.action %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nbr_messages) %>:</strong></dt>
  <dd><%= @operation.nbr_messages %></dd>
  <dt><strong><%= model_class.human_attribute_name(:elapsed_time) %>:</strong></dt>
  <dd><%= @operation.elapsed_time %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              operations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_operation_path(@operation), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              operation_path(@operation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
